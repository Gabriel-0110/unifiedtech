# Core Site Metadata
SITE_NAME="UnifiedTech Solutions by G&G"
SITE_DESCRIPTION="Cutting-edge technology solutions for modern businesses"
SITE_URL="https://ggunifiedtech.com"

# Optional (used by some components/pages)
NEXT_PUBLIC_SITE_NAME="UnifiedTech Solutions"
NEXT_PUBLIC_SITE_URL="https://ggunifiedtech.com"
NEXT_PUBLIC_BASE_URL="https://ggunifiedtech.com"

# MongoDB (required for /api/contact)
# Keep this secret in .env.local (dev) or your hosting provider (prod).
MONGODB_URI="mongodb+srv://USERNAME:PASSWORD@CLUSTER.mongodb.net/?retryWrites=true&w=majority"

# Recommended when your URI doesn't include a database name in the path
MONGODB_DB="unifiedtech"

# Collection used by /api/contact
MONGODB_CONTACT_COLLECTION="contact_submissions"

# Supabase (required for DB + Prisma)
# Use a real Postgres connection string from your Supabase project settings.
# Tip: Use DATABASE_URL for runtime queries; use DIRECT_URL for migrations/administration.
# Do not include square brackets like [project-ref] or [password] in the actual value.
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres?schema=public"
DIRECT_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres?schema=public"
NEXT_PUBLIC_SUPABASE_URL="https://YOUR_PROJECT.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="YOUR_PUBLIC_ANON_KEY"

# Google Analytics / Clarity
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_CLARITY_ID="clarity-id"

# Email / Notifications (placeholders)
FROM_EMAIL="no-reply@ggunifiedtech.com"
CONTACT_EMAIL="info@ggunifiedtech.com"
RESEND_API_KEY=""

# Newsletter (tokens auto-generated; no env needed yet but placeholder for future provider integration)
NEWSLETTER_SENDER_NAME="UnifiedTech"

# Rate Limiting / Security
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900
CORS_ORIGINS="https://ggunifiedtech.com,https://www.ggunifiedtech.com"

# Dynamics / Microsoft Graph (gated)
MS_TENANT_ID=""
MS_CLIENT_ID=""
MS_CLIENT_SECRET=""
MS_SCOPE="https://graph.microsoft.com/.default"

# Dataverse (client credentials)
DATAVERSE_URL="https://YOUR_ORG.crm.dynamics.com"
AZURE_TENANT_ID=""
AZURE_CLIENT_ID=""
AZURE_CLIENT_SECRET=""
DATAVERSE_WEB_SUBMISSION_ENTITYSET="ux_websubmissions"

# Optional: enable gated debugging for Dataverse + internal probe endpoints.
# When set, you can send:
# - x-debug-dataverse: 1 (to include dataverseError in /api/contact response)
# - x-debug-token: <DEBUG_API_TOKEN>
DEBUG_API_TOKEN=""

# Optional: override the Web Submission -> Lead lookup navigation property logical name
# used for @odata.bind. If unset, the API will try common candidates.
DATAVERSE_WEB_SUBMISSION_LEAD_LOOKUP=""

# Misc
# NODE_ENV is set by Next.js scripts; generally you should not hardcode it here.
